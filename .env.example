# CVstomize Environment Variables
# Copy this file to .env and fill in your actual values

# ================================
# Database Configuration
# ================================
POSTGRES_DB=cvstomize
POSTGRES_USER=cvstomize_user
POSTGRES_PASSWORD=changeme-use-strong-password
POSTGRES_PORT=5432

# PostgreSQL connection string for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL=postgresql://cvstomize_user:changeme@database:5432/cvstomize?schema=public

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# ================================
# Backend API Configuration
# ================================
API_PORT=3001
NODE_ENV=production
JWT_SECRET=your-secret-key-min-32-characters-change-in-production
CORS_ORIGIN=http://localhost:3000

# ================================
# Frontend Configuration
# ================================
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:3001

# For production deployment:
# REACT_APP_API_URL=https://your-api-domain.com

# ================================
# Firebase Configuration
# ================================
# Path to Firebase Admin SDK JSON key file
GOOGLE_APPLICATION_CREDENTIALS=/app/secrets/firebase-admin-key.json

# Firebase Web App Config (for frontend)
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id
REACT_APP_FIREBASE_MEASUREMENT_ID=your-measurement-id

# ================================
# Google Cloud Configuration
# ================================
GCP_PROJECT_ID=your-gcp-project-id

# Vertex AI / Gemini API
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# ================================
# Logging & Monitoring
# ================================
LOG_LEVEL=info
# Options: error, warn, info, http, verbose, debug, silly

# ================================
# Docker Compose Overrides
# ================================
# Uncomment to use different ports to avoid conflicts
# API_PORT=3002
# FRONTEND_PORT=3001
# POSTGRES_PORT=5433
# REDIS_PORT=6380

# ================================
# Development & Testing Configuration
# ================================
# For running tests in CI/CD
CI=false
NODE_ENV=development

# Development-only features (NEVER set these to 'true' in production!)
# Enable admin endpoints for testing without proper auth
DEV_ADMIN_MODE=true

# Automatically set unlimited resume generation for all users in dev
DEV_UNLIMITED_RESUMES=true

# ================================
# IMPORTANT: Firebase Key Management
# ================================
# NEVER commit your actual .env file to Git!
#
# How to get your Firebase keys:
# 1. Go to Firebase Console: https://console.firebase.google.com/
# 2. Select your project (cvstomize)
# 3. Click the gear icon → Project Settings
# 4. Scroll down to "Your apps" section
# 5. Copy the config values to this file
#
# For Firebase Admin SDK:
# 1. Go to Project Settings → Service Accounts
# 2. Click "Generate new private key"
# 3. Save the JSON file to: /path/to/secrets/firebase-admin-key.json
# 4. Set GOOGLE_APPLICATION_CREDENTIALS to point to that file
#
# SECURITY:
# - The .env file is in .gitignore - it won't be committed
# - Keep your keys secret and never share them
# - Use different keys for dev/staging/production
# - Rotate keys if they are ever compromised

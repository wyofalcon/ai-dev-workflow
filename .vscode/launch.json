{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Cloud Run: Run/Debug Locally",
      "type": "cloudcode.cloudrun",
      "request": "launch",
      "build": {
        "docker": {
          "path": "Dockerfile"
        }
      },
      "image": "cvstomize",
      "service": {
        "name": "cvstomize",
        "containerPort": 8080,
        "resources": {
          "limits": {
            "memory": "256Mi"
          }
        }
      },
      "target": {
        "minikube": {}
      },
      "watch": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Docker: Attach to Backend",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "/app",
      "protocol": "inspector",
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Playwright Tests (Headless)",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "--reporter=list"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Playwright Tests (Headed)",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "--headed", "--reporter=list"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "msedge",
      "name": "Edge: Launch Frontend",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*"
      }
    },
    {
      "type": "msedge",
      "name": "Edge: Launch Storybook",
      "request": "launch",
      "url": "http://localhost:6006",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "type": "vscode-edge-devtools.debug",
      "name": "Edge DevTools: Attach to Frontend",
      "request": "attach",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "vscode-edge-devtools.debug",
      "name": "Edge DevTools: Attach to Storybook",
      "request": "attach",
      "url": "http://localhost:6006",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "pwa-msedge",
      "name": "Launch Microsoft Edge",
      "request": "launch",
      "runtimeArgs": ["--remote-debugging-port=9222"],
      "url": "c:\\Users\\Wyofa\\.vscode\\extensions\\ms-edgedevtools.vscode-edge-devtools-2.1.10\\out\\startpage\\index.html",
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "pwa-msedge",
      "name": "Launch Microsoft Edge in headless mode",
      "request": "launch",
      "runtimeArgs": ["--headless", "--remote-debugging-port=9222"],
      "url": "c:\\Users\\Wyofa\\.vscode\\extensions\\ms-edgedevtools.vscode-edge-devtools-2.1.10\\out\\startpage\\index.html",
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "vscode-edge-devtools.debug",
      "name": "Open Edge DevTools",
      "request": "attach",
      "url": "c:\\Users\\Wyofa\\.vscode\\extensions\\ms-edgedevtools.vscode-edge-devtools-2.1.10\\out\\startpage\\index.html",
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Frontend + Edge DevTools",
      "configurations": [
        "Edge: Launch Frontend",
        "Edge DevTools: Attach to Frontend"
      ]
    },
    {
      "name": "Storybook + Edge DevTools",
      "configurations": [
        "Edge: Launch Storybook",
        "Edge DevTools: Attach to Storybook"
      ]
    },
    {
      "name": "Full Debug: Backend + Frontend + DevTools",
      "configurations": [
        "Docker: Attach to Backend",
        "Edge: Launch Frontend",
        "Edge DevTools: Attach to Frontend"
      ]
    },
    {
      "name": "Launch Edge Headless and attach DevTools",
      "configurations": [
        "Launch Microsoft Edge in headless mode",
        "Open Edge DevTools"
      ]
    },
    {
      "name": "Launch Edge and attach DevTools",
      "configurations": ["Launch Microsoft Edge", "Open Edge DevTools"]
    }
  ]
}

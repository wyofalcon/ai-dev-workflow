{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "vscode-edge-devtools.debug",
      "request": "launch",
      "name": "Launch Edge with DevTools",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "type": "vscode-edge-devtools.debug",
      "request": "launch",
      "name": "Launch Storybook with DevTools",
      "url": "http://localhost:6006",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "Docker: Attach to Backend",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "/app",
      "protocol": "inspector",
      "restart": true
    },
    {
      "name": "Cloud Run: Run/Debug Locally",
      "type": "cloudcode.cloudrun",
      "request": "launch",
      "build": {
        "docker": {
          "path": "Dockerfile"
        }
      },
      "image": "cvstomize",
      "service": {
        "name": "cvstomize",
        "containerPort": 8080,
        "resources": {
          "limits": {
            "memory": "256Mi"
          }
        }
      },
      "target": {
        "minikube": {}
      },
      "watch": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Playwright Tests (Headless)",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "--reporter=list"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Playwright Tests (Headed)",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "--headed", "--reporter=list"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "msedge",
      "name": "Edge: Launch Frontend (Standalone)",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Full Debug: Backend + Frontend (Edge Tools)",
      "configurations": [
        "Docker: Attach to Backend",
        "Launch Edge with DevTools"
      ]
    },
    {
      "name": "Storybook + Edge DevTools",
      "configurations": [
        "Launch Storybook with DevTools"
      ]
    }
  ]
}

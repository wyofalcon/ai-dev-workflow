{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git Sync",
      "type": "shell",
      "command": "./git-sync.sh",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Stages, commits, pulls, and pushes changes to Git."
    },
    {
      "label": "Run E2E Tests (UI Mode)",
      "type": "shell",
      "command": "npm run test:e2e:ui",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": [],
      "detail": "Run Playwright tests with interactive UI - best for monitoring"
    },
    {
      "label": "Run E2E Tests (Headed)",
      "type": "shell",
      "command": "npm run test:e2e:headed",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "detail": "Run tests with browser visible"
    },
    {
      "label": "Run E2E Tests (Headless)",
      "type": "shell",
      "command": "npm run test:e2e",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Run all tests in headless mode (fast)"
    },
    {
      "label": "Show Test Report",
      "type": "shell",
      "command": "npm run test:report",
      "presentation": {
        "reveal": "never",
        "panel": "new"
      },
      "problemMatcher": [],
      "detail": "Open HTML test report in browser"
    },
    {
      "label": "Run Autonomous Tests (AI-Powered)",
      "type": "shell",
      "command": "node tests/autonomous-test-runner.cjs",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Run AI-powered autonomous tests with Gemini"
    },
    {
      "label": "Run Autonomous Tests (Visible Browser)",
      "type": "shell",
      "command": "HEADLESS=false node tests/autonomous-test-runner.cjs",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": [],
      "detail": "Run AI tests with visible browser for monitoring"
    },
    {
      "label": "View Test Progress Dashboard",
      "type": "shell",
      "command": "node tests/view-test-progress.cjs",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": [],
      "detail": "View current autonomous test progress and statistics"
    },
    {
      "label": "Setup Autonomous Testing",
      "type": "shell",
      "command": "./tests/setup-autonomous-testing.sh",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": [],
      "detail": "Configure dependencies and API keys for autonomous testing"
    }
  ]
}
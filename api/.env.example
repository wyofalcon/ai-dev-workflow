# Local Development Environment
# Copy this file to .env: cp .env.example .env

NODE_ENV=development

# Database - Local Docker PostgreSQL
DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/cvstomize_dev?schema=public

# Redis - Local Docker Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=3001

# CORS
CORS_ORIGIN=http://localhost:3000

# GCP/Vertex AI (credentials file is included in repo for dev)
GOOGLE_APPLICATION_CREDENTIALS=./gcp-key.json
GCP_PROJECT_ID=cvstomize

# Development Tools
DEV_ADMIN_MODE=true
